package task9;

import static java.lang.System.out;

public class Main 
{
	
	public static void main(String[] args) 
	{
		String x = "One two three раз два три one1 two2 123 ";
		out.println(countOnlyLetterWords(x));
	}
	
	public static int countOnlyLetterWords(String x)
	{
		String[] words = x.split(" ");
		int count=0;
		for(int i=0; i< words.length;++i)
		{
			if (words[i].matches("[a-zA-z]+"))
				++count;
		}
		return count;
	}
}
