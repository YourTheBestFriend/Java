package task8;

public class Main
{
	public static void main(String[] args) 
	{
		String string = "abababababab aaaa abc fgsgsgsdf f 123456789 jkjk";
		System.out.println(findMinWord(string));
	}
	
	public static String findMinWord(String x)
	{
		String[] words = x.split(" ");
		
		long wordIndex = words[0].chars().distinct().count();
		
		String word=words[(int)wordIndex];
		
		for(int i = 1; i < words.length; i++)
		{
			/*
			 Метод distinct возвращает stream без дубликатов, при этом для упорядоченного стрима (например, коллекция на основе list) порядок стабилен, для неупорядоченного — порядок не гарантируется
			 */
			if (words[i].chars().distinct().count() < words[(int)wordIndex].chars().distinct().count()) // words[i].chars().distinct().count() countUniqueCharacters
			{
				wordIndex = i;
				word = words[(int)wordIndex];
			}
		}
		return words[(int) wordIndex];
	
	}
}
